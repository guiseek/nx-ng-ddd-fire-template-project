{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env": ["environments/environment.ts"],
      "@env/*": ["environments/*"],
      "@dekao/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@dekao/auth/domain": ["libs/auth/domain/src/index.ts"],
      "@dekao/auth/feature-login": ["libs/auth/feature-login/src/index.ts"],
      "@dekao/auth/feature-account": ["libs/auth/feature-account/src/index.ts"],
      "@dekao/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@dekao/auth/shell": ["libs/auth/shell/src/index.ts"],
      "@dekao/catalog/domain": ["libs/catalog/domain/src/index.ts"],
      "@dekao/catalog/feature-browse-products": [
        "libs/catalog/feature-browse-products/src/index.ts"
      ],
      "@dekao/catalog/shell": ["libs/catalog/shell/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
